{
  "$schema": "https://developers.cloudflare.com/pages/platform/build-configuration",
  "build": {
    "command": "npm run build",
    "cwd": "/",
    "watch_paths": [
      "src/**/*",
      "public/**/*",
      "package.json",
      "vite.config.ts",
      "tsconfig.json"
    ]
  },
  "deploy": {
    "output_directory": "dist"
  },
  "environment": {
    "NODE_VERSION": "20",
    "NODE_ENV": "production"
  }
}
